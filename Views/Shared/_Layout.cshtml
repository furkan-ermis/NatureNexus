<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/btnStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layoutCss/registerBtn.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layoutCss/hamburgerMenu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layoutCss/navStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NatureNexus.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:opsz@10..48&display=swap" rel="stylesheet">

</head>
<body >
            <header class="header">
        @*Header Logo*@
    <div class="header-logo">
                    <img src="~/assets/images/logowhite.png"  />
                </div>
        @*Header Mobile Navigation*@
        <nav role="navigation">
            <div id="menuToggle">
                <input type="checkbox" />
                <!-- Hamburger menu lines  -->
                <span></span>
                <span></span>
                <span></span>

                <!-- mobile menu -->
                <ul id="menu">
                    <a href="#">
                    <li>Anasayfa</li></a>
                    <a href="#">
                    <li>Hakkında</li></a>
                    <a href="#">
                    <li>Gezilecek Yerler</li></a>
                    <a href="#">
                    <li>İletişim</li></a>
                </ul>
            </div>  
        </nav>
        @*Header Desktop Navigation*@
        <nav class="nav ">
            <a href="#">Anasayfa</a>
            <a href="#">Hakkında</a>
            <a href="#">Gezilecek Yerler</a>
            <a href="#">İletişim</a>
            <div id="indicator"></div>
        </nav>
        <ul class="registerBtn">
            <li>
                <a class="regbtn regbtn-fill fill">Login</a> 
            </li>
            <li>
                <a class="regbtn regbtn-close close" href="#">SignUp</a>
            </li>
        </ul>
            </header>

    

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="sidefooter">
        <section>
            <p>
                Daha fazlasını öğrenmek istiyorsunuz<br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; ama nereden başlayacağınızı bilmiyor musunuz?
                <br />Size ulaşmamız İçin <b>Mail Adresinizi</b> Girmeniz Yeterli..
            </p>
        </section>
        <section>
            <input type="search" placeholder="Email Adresinizi Giriniz"/><span><a  href="#" class="fas fa-search" ></a></span>
        </section>
    </footer>
    <footer class="mainfooter">
        <section class="footerLogo">
            <a href="#">
                <img src="~/assets/images/logoblack.png" />
            </a>
        </section>
        <section class="footerNav">
            <ul>
                <li><a class="animateBottomLine" href="#">Anasayfa</a></li>
                <li><a class="animateBottomLine" href="#">Hakkında</a></li>
                <li> <a class="animateBottomLine" href="#">Gezilecek Yerler</a></li>
                <li> <a class="animateBottomLine" href="#">İletişim</a></li>
            </ul>
        </section>
        <section >
            <ul class="footer-social-media">
                <li><a class="nav-link" href="https://medium.com/@@furkan.ermis" target="_blank"  title="Medium"><i  class="fa-brands fa-medium fa-2x bevel"></i></a></li>
                <li><a class="nav-link" href="https://www.linkedin.com/in/-furkanermis/" target="_blank" title="Linkedin"><i class="fa-brands fa fa-linkedin fa-2x bevel"></i></a></li>
                <li><a class="nav-link" href="https://www.instagram.com/furkanermis/" target="_blank" title="Instagram"><i class="fa-brands fa-instagram fa-2x bevel"></i></a></li>
                <li><a class="nav-link" href="https://twitter.com/?lang=tr" target="_blank" title="Twitter"><i class="fa-brands fa-square-x-twitter fa-2x bevel"></i></a></li>
            </ul>
            <div id="copyright">
                &copy; <span style="font-weight:bold;color:var(--clr-header)" id="currentDate"> @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</span>  - Journey Peak - @ViewData["Title"] -> <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
            </div>

        </section>
<div class="m-4">
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function () {
            function updateCurrentDate() {
                $.ajax({
                    type: "GET",
                    url: "@Url.Action("GetCurrentDate", "Home")",
                    success: function (data) {
                        $('#currentDate').text(data);
                    }
                });
            }

            updateCurrentDate(); // Sayfa yüklendiğinde tarih ve saat güncellensin

            // 1 saniyede bir tarih ve saat güncellemesi yap
            setInterval(updateCurrentDate, 1000);
        });
    </script>
</body>
</html>
