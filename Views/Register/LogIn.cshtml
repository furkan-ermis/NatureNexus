@model UserLogInViewModel
@{
    ViewData["Title"] = "Giriş Yap ";
    ViewData["Style"] = "LogIn.css";
}
<div class="registerwrapper container"> 
    <div class="registerCard">
        <h3>@ViewData["Title"] </h3>
        <form asp-action="LogIn" id="">
            <div asp-validation-summary="ModelOnly" style="color:red;font-size:7px;"></div>
            <div class="field">
                <input type="text" asp-for="Email" value="@ViewBag?.email" placeholder="Mail Adresinizi Giriniz" />
                <div style="font-size:.7em !important;color:black; background-color:antiquewhite;   "><span style="padding:1em;">MailDemo:</span>10webapp10@gmail.com</div>
                <span asp-validation-for="Email" style="color:red;font-size:7px;"></span>
                </div>
            <div class="field">
                <input asp-for="Password" type="password" value="@ViewBag?.password" placeholder="Şifrenizi Giriniz" />
                <div style="font-size:.7em !important;color:black; background-color:antiquewhite;   "><span style="padding:1em;">PasswordDemo:</span>123Abc123</div>

                <span asp-validation-for="Password" style="color:red;font-size:7px;"></span>

            </div>
            <div class="field">
                <input type="submit" class="formBtn" value="Giriş Yap" />
            </div>
        <div class="rememberForget">
            <div class="rememberMe">
                <input asp-for="RememberMe" type="checkbox"  /> <span> Beni Hatırla</span>
            </div>
            <div class="forgetPassword">
                    <a asp-action="ForgetPassword">Şifremi Unuttum</a>
                </div>
        </div>
        </form>
        <div class="noAccount">
            <a asp-action="SignUp" asp-controller="Register">Bir Hesabım Yok</a>
        </div>
    </div>
</div>
